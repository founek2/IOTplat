{
  "name": "iot",
  "version": "0.1.0",
  "license": "Apache License v2",
  "scripts": {
    "start": "node ./bin/www",
    "updateFrontEnd": "npm run build --prefix ../frontend && rm -rf public/* && cp -R ../frontend/build/* public/",
    "deploy": "env NODE_ENV=production npm run updateFrontEnd && npm run startForev",
    "startForev": "forever start bin/www",
    "stopForev": "forever stop bin/www"
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "forever": "^0.15.3",
    "hat": "0.0.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.21.0",
    "mongoose": "^4.13.14",
    "morgan": "~1.9.0",
    "node-fetch": "^2.1.2",
    "ramda": "^0.25.0",
    "serve-favicon": "~2.4.5"
  }
}
